default_platform(:ios)

platform :ios do
  desc "Build and upload to App Store Connect (TestFlight)"
  lane :beta do
    setup_ci

    # Use API key for App Store Connect
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true,
    ) if ENV["ASC_KEY_ID"]

    # Sync certificates and provisioning profiles
    match(
      type: "appstore",
      app_identifier: "com.tertiaryinfotech.hrportal",
      readonly: is_ci,
      api_key: api_key,
    ) if ENV["MATCH_GIT_URL"]

    # Build the app
    build_app(
      workspace: "ios/App/App.xcodeproj/project.xcworkspace",
      scheme: "App",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.tertiaryinfotech.hrportal" => "match AppStore com.tertiaryinfotech.hrportal"
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
    )
  end

  desc "Build and upload using Apple ID (no API key needed)"
  lane :upload_with_appleid do
    setup_ci

    build_app(
      project: "ios/App/App.xcodeproj",
      scheme: "App",
      clean: true,
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Automatic DEVELOPMENT_TEAM=#{ENV['APPLE_TEAM_ID']}",
    )

    upload_to_testflight(
      apple_id: ENV["APPLE_ID"],
      skip_waiting_for_build_processing: true,
    )
  end
end
